.rank-container {
  width: 85%;
  margin-top: 20rpx;
  padding-bottom: 40rpx;
  padding: 5rpx 30rpx;
}

.rank-header {
  height: 50rpx;
  position: relative;
}

.rank-header__line {
  border-bottom: 3rpx solid #09BB07;
}

.rank-header__text {
  position: absolute;
  top:-20rpx;
  width: 38%;
  background-color: #f4f4f4;
  left: 31%;
  text-align: center;
  color: #09BB07;
  font-size: 18px;
}

.rank-item__left {
  width: 60%;
  display: inline-block;
  height: 100%;
}

.rank-item__right {
  width: 40%;
  display: inline-block;
  height: 100%;
  text-align: right;
  position: relative;
}

.rank-item__number {
  position: absolute;
  font-size: 24px;
  right: 15rpx;
}

.rank-item__gold {
  color: #F8E71C;
}

.rank-item__sliver {
  color: #FFFFFF;
}
.rank-item__copper {
  color: #F5A623;
}

.rank-item {
  position: relative;
  height: 100rpx;
